---
layout: wrapper.njk
pagination:
  data: sessionize.sessions
  size: 1
  alias: session
permalink: sessions/{{ session.title | slug }}/index.html
---

<h1 class="type--h1">{{session.title}}</h1>

<p class="sessions--start">
  {% time session.startsAt, {hour: "numeric", minute: 'numeric'} %} - {% time session.endsAt, {hour:
  "numeric", minute: 'numeric'} %}
</p>

<div>{{session.description | md | safe }}</div>

<ul class="session--speakers">
  {% for speaker in session | speakers(sessionize.speakers) %}
  <li class="sessions--speaker">
    <img class="sessions--picture" src="{{speaker.profilePicture}}" alt="" />
    <p class="sessions--name">{{speaker.fullName}}</p>
    <p class="speaker--tag">{{speaker.tagLine}}</p>
    {% if speaker.tagLine != speaker.bio %}
    <div class="bio type">{{speaker.bio | md | safe }}</div>
    {% endif %} {% if speaker.links.length > 0 %}
    <ul class="sessions--links">
      {% for link in speaker.links %}
      <li class="sessions--link">
        <a data-type="{{link.linkType | slug }}" href="{{link.url}}" target="_blank"
          >{{link.title}}</a
        >
      </li>
      {% endfor %}
    </ul>
    {% endif %}
  </li>
  {% endfor %}
</ul>
